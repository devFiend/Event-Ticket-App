<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ğŸŸ My Tickets</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

    <%- include ('partials/header') %>
    <div class="container">
        <h2>ğŸ‘‹ Welcome, <%= email %>!</h2>
        
        <input type="text" id="search" placeholder="ğŸ” Search tickets..." class="search-bar">

        <div class="ticket-list">
            <% tickets.forEach(ticket => { %>
                <div class="ticket-item">
                    <div class="ticket-details">
                        <span class="event-title">ğŸ­ <%= ticket.eventId?.title || "Event Not Found" %></span>
                        <span class="event-date">ğŸ“… 
                            <%= ticket.eventId?.date ? new Date(ticket.eventId.date).toDateString().slice(4) : "N/A" %>
                        </span>
                        <span class="ticket-code">ğŸ« <%= ticket.ticketCode %></span>
                    </div>
                    <% if (ticket.eventId) { %>
                        <a href="/dashboard/download-ticket/<%= ticket._id %>" class="btn-download">â¬‡ Download</a>
                    <% } else { %>
                        <span class="btn-disabled">âŒ Event Deleted</span>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </div>

    <script>
        document.getElementById("search").addEventListener("input", function() {
            let search = this.value.toLowerCase();
            document.querySelectorAll(".ticket-item").forEach(ticket => {
                let text = ticket.innerText.toLowerCase();
                ticket.style.display = text.includes(search) ? "" : "none";
            });
        });
    </script>

    <%- include ('partials/footer') %>
</body>
</html>
