<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles.css">
  <title>All Tickets</title>
</head>
<body>
  <h1>All Generated Tickets</h1>
  <table border="1">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Event</th>
      <th>QR Code</th>
      <th>Created At</th>
    </tr>
    <% tickets.forEach(ticket => { %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.email %></td>
        <td><%= ticket.event %></td>
        <td><img src="<%= ticket.qrCode %>" width="100"></td>
        <td><%= ticket.createdAt.toDateString() %></td>
      </tr>
    <% }); %>
  </table>
  <br>
  <a href="/">Generate New Ticket</a>
</body>
</html>
